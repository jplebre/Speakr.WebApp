<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="/node_modules/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">Speakr</a>
            </div>

            <div class="navbar navbar-nav navbar-right">
                <a class="btn btn-default btn-xs navbar-btn">Sign In!</a>
                @*paste sign in code here, give form a class "navbar-form"*@
            </div>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
    <footer>
        @RenderSection("footer",false)
        @await Component.InvokeAsync("Footer")
    </footer>

    <script src="/node_modules/jquery/dist/jquery.js"></script>
    <script src="/node_modules/jquery-validation/dist/jquery.validate.js"></script>
    <script src="/node_modules/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</body>
</html>
